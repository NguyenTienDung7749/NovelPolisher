<Application x:Class="TranslatorApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- ══════════════════════════════════════════════════════════════════
                 CYBERPUNK THEME - Made By xDzungf
                 Dark backgrounds, neon cyan/magenta accents, glowing effects
                 ══════════════════════════════════════════════════════════════════ -->
            
            <!-- Core Cyberpunk Colors -->
            <Color x:Key="NeonCyan">#00F5FF</Color>
            <Color x:Key="NeonMagenta">#FF00FF</Color>
            <Color x:Key="NeonPink">#FF1493</Color>
            <Color x:Key="NeonPurple">#9D00FF</Color>
            <Color x:Key="NeonGreen">#39FF14</Color>
            <Color x:Key="NeonYellow">#FFE500</Color>
            
            <!-- Background Colors -->
            <Color x:Key="DarkBg">#0A0E17</Color>
            <Color x:Key="DarkBg2">#0F1621</Color>
            <Color x:Key="DarkSurface">#151C28</Color>
            <Color x:Key="DarkCard">#1A2332</Color>
            <Color x:Key="DarkBorder">#2A3546</Color>
            
            <!-- Text Colors -->
            <Color x:Key="TextPrimary">#E8F0FF</Color>
            <Color x:Key="TextSecondary">#8899AA</Color>
            <Color x:Key="TextMuted">#566577</Color>
            
            <!-- Status Colors -->
            <Color x:Key="SuccessColor">#39FF14</Color>
            <Color x:Key="ErrorColor">#FF3366</Color>
            <Color x:Key="WarningColor">#FFE500</Color>
            
            <!-- Brushes -->
            <SolidColorBrush x:Key="NeonCyanBrush" Color="{StaticResource NeonCyan}"/>
            <SolidColorBrush x:Key="NeonMagentaBrush" Color="{StaticResource NeonMagenta}"/>
            <SolidColorBrush x:Key="NeonPinkBrush" Color="{StaticResource NeonPink}"/>
            <SolidColorBrush x:Key="NeonPurpleBrush" Color="{StaticResource NeonPurple}"/>
            <SolidColorBrush x:Key="NeonGreenBrush" Color="{StaticResource NeonGreen}"/>
            <SolidColorBrush x:Key="NeonYellowBrush" Color="{StaticResource NeonYellow}"/>
            
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource DarkBg}"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource DarkSurface}"/>
            <SolidColorBrush x:Key="CardBrush" Color="{StaticResource DarkCard}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource DarkBorder}"/>
            
            <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextPrimary}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
            <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
            
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
            
            <!-- Legacy brushes for compatibility -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource NeonCyan}"/>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#00C5CC"/>

            <!-- Gradient Brushes -->
            <LinearGradientBrush x:Key="NeonGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource NeonCyan}" Offset="0"/>
                <GradientStop Color="{StaticResource NeonMagenta}" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="CyberGradient" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="{StaticResource NeonPurple}" Offset="0"/>
                <GradientStop Color="{StaticResource NeonCyan}" Offset="0.5"/>
                <GradientStop Color="{StaticResource NeonMagenta}" Offset="1"/>
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0F1621" Offset="0"/>
                <GradientStop Color="#0A0E17" Offset="1"/>
            </LinearGradientBrush>

            <!-- DropShadow Effects for Neon Glow -->
            <DropShadowEffect x:Key="CyanGlow" Color="{StaticResource NeonCyan}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            <DropShadowEffect x:Key="MagentaGlow" Color="{StaticResource NeonMagenta}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            <DropShadowEffect x:Key="GreenGlow" Color="{StaticResource NeonGreen}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            <DropShadowEffect x:Key="PinkGlow" Color="{StaticResource NeonPink}" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            
            <!-- Primary Button - Neon Cyan with Glow -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource NeonCyanBrush}"/>
                <Setter Property="Foreground" Value="#0A0E17"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Effect" Value="{StaticResource CyanGlow}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}"
                                    BorderBrush="{StaticResource NeonCyanBrush}"
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#33FFFF"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#33FFFF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#00C5CC"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#2A3546"/>
                                    <Setter Property="Foreground" Value="#566577"/>
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#2A3546"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Secondary Button - Outlined Neon -->
            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A3040"/>
                                    <Setter Property="Effect" Value="{StaticResource CyanGlow}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="BorderBrush" Value="#2A3546"/>
                                    <Setter Property="Foreground" Value="#566577"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Danger Button - Neon Pink/Red -->
            <Style x:Key="DangerButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource NeonPinkBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Effect" Value="{StaticResource PinkGlow}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}"
                                    BorderBrush="{StaticResource NeonPinkBrush}"
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3399"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#CC0066"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#2A3546"/>
                                    <Setter Property="Foreground" Value="#566577"/>
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#2A3546"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Success Button - Neon Green -->
            <Style x:Key="SuccessButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource NeonGreenBrush}"/>
                <Setter Property="Foreground" Value="#0A0E17"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Effect" Value="{StaticResource GreenGlow}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}"
                                    BorderBrush="{StaticResource NeonGreenBrush}"
                                    BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66FF44"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#2A3546"/>
                                    <Setter Property="Foreground" Value="#566577"/>
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- TextBox Style - Dark with Neon Border -->
            <Style TargetType="TextBox">
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="CaretBrush" Value="{StaticResource NeonCyanBrush}"/>
                <Setter Property="SelectionBrush" Value="{StaticResource NeonCyanBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                    <Setter TargetName="border" Property="Effect" Value="{StaticResource CyanGlow}"/>
                                </Trigger>
                                <Trigger Property="IsReadOnly" Value="True">
                                    <Setter Property="Background" Value="#101520"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- PasswordBox Style -->
            <Style TargetType="PasswordBox">
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="CaretBrush" Value="{StaticResource NeonCyanBrush}"/>
                <Setter Property="SelectionBrush" Value="{StaticResource NeonCyanBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                    <Setter TargetName="border" Property="Effect" Value="{StaticResource CyanGlow}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ComboBox Toggle Button Style -->
            <Style x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="Border" 
                                        Grid.ColumnSpan="2"
                                        Background="White"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"/>
                                <Border Grid.Column="1"
                                        Background="#E8E8E8"
                                        CornerRadius="0,4,4,0"
                                        Margin="0,1,1,1"/>
                                <Path Grid.Column="1"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                      Fill="#333333"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource NeonCyanBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ComboBox Style with Full Template -->
            <Style TargetType="ComboBox">
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                              Style="{StaticResource ComboBoxToggleButton}"
                                              Grid.Column="2"
                                              Focusable="False"
                                              ClickMode="Press"
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <ContentPresenter x:Name="ContentSite"
                                                  IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  Margin="14,8,30,8"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left">
                                    <ContentPresenter.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Style>
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                                <TextBox x:Name="PART_EditableTextBox"
                                         Style="{x:Null}"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Center"
                                         Margin="14,8,30,8"
                                         Focusable="True"
                                         Background="Transparent"
                                         Foreground="Black"
                                         CaretBrush="Black"
                                         Visibility="Hidden"
                                         IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                <Popup x:Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Grid x:Name="DropDown"
                                          SnapsToDevicePixels="True"
                                          MinWidth="{TemplateBinding ActualWidth}"
                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder"
                                                Background="White"
                                                BorderBrush="{StaticResource NeonCyanBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"/>
                                        <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEditable" Value="True">
                                    <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- ComboBoxItem Style - Black text for dropdown items -->
            <Style TargetType="ComboBoxItem">
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBoxItem">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E0F7FF"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#00C5CC"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Label Style -->
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Padding" Value="0,0,0,6"/>
            </Style>

            <!-- CheckBox Style -->
            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <!-- GroupBox Style - Cyberpunk Card -->
            <Style TargetType="GroupBox">
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GroupBox">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!-- Card Background with subtle glow -->
                                <Border Grid.Row="0" Grid.RowSpan="2" 
                                        Background="{StaticResource CardBrush}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#00F5FF" BlurRadius="8" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                </Border>
                                <!-- Header with gradient -->
                                <Border Grid.Row="0" Padding="15,12" CornerRadius="8,8,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1E2A3A" Offset="0"/>
                                            <GradientStop Color="#151C28" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <ContentPresenter ContentSource="Header" 
                                                      TextBlock.FontWeight="Bold" 
                                                      TextBlock.FontSize="15"
                                                      TextBlock.Foreground="{StaticResource NeonCyanBrush}"
                                                      TextBlock.FontFamily="Segoe UI"/>
                                </Border>
                                <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ProgressBar Style - Neon Animated -->
            <Style TargetType="ProgressBar">
                <Setter Property="Height" Value="10"/>
                <Setter Property="Background" Value="#1A2332"/>
                <Setter Property="Foreground" Value="{StaticResource NeonCyanBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                                <Border x:Name="PART_Track">
                                    <Border x:Name="PART_Indicator" 
                                            CornerRadius="4"
                                            HorizontalAlignment="Left">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="{StaticResource NeonCyan}" Offset="0"/>
                                                <GradientStop Color="{StaticResource NeonMagenta}" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect Color="{StaticResource NeonCyan}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                        </Border.Effect>
                                    </Border>
                                </Border>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ScrollBar Style for dark theme -->
            <Style TargetType="ScrollBar">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Width" Value="10"/>
            </Style>

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
